            <!-- RULE 1 : @ana on <seg> with closed list of values -->
            <elementSpec ident="seg" mode="change" module="linking">
               <desc>
                  [Note Change!] Segment element used for analytical markup in both letters and theatrical texts.
                  FOR LETTERS (Kafka): Used @ana to mark analytically interesting passages with values like 'explanation', 'personification', 'paradox', etc.
                  FOR THEATRE (Antigone): 'imperative', 'rhetorical_question', 'declaration', etc.
                  FOR ESSAY (FaimDuTigre): 'biological_determinism', 'human_exceptionalism','empirical_evidence' and 'irony'
               </desc>
               
               
               
               <attList>
                  <attDef ident="ana" mode="change" usage="opt">
                     <desc>Analytical categories for both letter and theatrical analysis.</desc>
                     <datatype>
                        <dataRef key="teidata.enumerated"/>
                     </datatype>
                     <valList type="closed">
                        <!-- Kafka letter analysis -->
                        <valItem ident="explanation">
                           <desc>Segments where Kafka explicitly explains or clarifies a feeling, situation or idea.</desc>
                        </valItem>
                        <valItem ident="personification">
                           <desc>Segments where abstract entities (for example fear) are treated as if they had agency.</desc>
                        </valItem>
                        <valItem ident="paradox">
                           <desc>Segments built around an apparent contradiction or tension between two statements.</desc>
                        </valItem>
                        <valItem ident="isolation">
                           <desc>Segments emphasising solitude, lack of support, or being cut off from others.</desc>
                        </valItem>
                        <valItem ident="realisation">
                           <desc>Segments where Kafka formulates or acknowledges a new insight about himself or Milena.</desc>
                        </valItem>
                        <valItem ident="universalisation">
                           <desc>Segments where Kafka generalises his fear or experience into a broader reflection.</desc>
                        </valItem>
                        <valItem ident="relief">
                           <desc>Segments expressing relief or a temporary easing of anxiety, for example through writing.</desc>
                        </valItem>
                        
                        <!-- Antigone act -->
                        <valItem ident="imperative">
                           <desc>Command or imperative speech act</desc>
                        </valItem>
                        <valItem ident="rhetorical_question">
                           <desc>Question not expecting a genuine answer</desc>
                        </valItem>
                        <valItem ident="declaration">
                           <desc>Statement or declaration of intent/fact</desc>
                        </valItem>
                        <valItem ident="interjection">
                           <desc>Exclamation or emotional outburst</desc>
                        </valItem>
                        <valItem ident="insult">
                           <desc>Insulting or degrading language</desc>
                        </valItem>
                        <valItem ident="physical_description">
                           <desc>Description of physical actions or appearance</desc>
                        </valItem>
                     
                  
                  
                  <!-- Philosophical essay -->
                        <valItem ident="biological_determinism">
                           <desc>Segments asserting that behavior is determined by biological instinct or natural drives, without conscious reasoning.
                           </desc>
                  </valItem>
                        <valItem ident="human_exceptionalism">
                           <desc> Segments claiming that humans are exceptional or distinct from animals due to consciousness, reasoning, or causal understanding.</desc>
                  </valItem>
                        <valItem ident="empirical_evidence">
                           <desc> Segments providing observable facts or examples to support the argument about animal or human behavior.</desc>
                  </valItem>
                  
                        <valItem ident="irony">
                           <desc> Segments where the author uses irony.</desc>
                        </valItem>
                  </valList>
                  </attDef>
                  
                  
                  <!-- Other inherited attributes from att.segLike and att.global -->
                  <attDef ident="facs" mode="delete"/>
                  <attDef ident="part" mode="change">
                     <valList mode="add" type="closed">
                        <valItem ident="N"/>
                     </valList>
                  </attDef>
                  <attDef ident="type" mode="delete"/>
                  <attDef ident="subtype" mode="delete"/>
                  <attDef ident="hand" mode="delete"/>
               </attList>
               
               <exemplum>
                  <egXML xmlns="http://www.tei-c.org/ns/Examples">
                     <!-- Example from Kafka letter -->
                     <s><seg ana="personification">It really is stronger than I am, it tosses me around at will, I don't know up from down anymore or right from left.</seg></s>
                  </egXML>
               </exemplum>
               
               <exemplum>
                  <egXML xmlns="http://www.tei-c.org/ns/Examples">
                     <!-- Example from Antigone -->
                     <persName>CRÉON</persName>
                     <seg ana="imperative">Vas-tu te taire, enfin, bon Dieu ?</seg>
                  </egXML>
               </exemplum>
               
               <exemplum>
