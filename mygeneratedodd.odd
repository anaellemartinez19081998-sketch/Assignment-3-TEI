            <!-- RULE 3 : persName/@ref integrity constraint  -->
            <elementSpec ident="persName" mode="change" module="namesdates">
               <constraintSpec ident="persNameRefConstraint"
                  scheme="schematron">
                  <desc>[Note Change!] This Schematron rule checks the consistency of
                     references between the text and the header: any <gi>persName</gi>
                     element with a <att>ref</att> attribute must point to an existing
                     <gi>person</gi> in <gi>listPerson</gi> via <att>xml:id</att>.</desc>
                  
                
                  
                  <constraint>
                     <sch:pattern id="persName-ref-targets-person">
                        <sch:rule context="*:persName[@ref]">
                           <sch:assert test="id(substring(@ref,2))">
                              The @ref attribute on persName must point (without the leading #)
                              to an existing person/@xml:id in the header.
                              
                           </sch:assert>
                        </sch:rule>
                     </sch:pattern>
                    
                  </constraint>
                  
               </constraintSpec>
              
               
